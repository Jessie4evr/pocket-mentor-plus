{
  "manifest_version": 3,
  "name": "Pocket Mentor+",
  "version": "1.0",
  "description": "AI-powered study assistant for summarizing, simplifying, and quizzing text offline.",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "notebook.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
