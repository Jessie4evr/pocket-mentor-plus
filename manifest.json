{
  "manifest_version": 3,
  "name": "Pocket Mentor+",
  "version": "1.0",
  "description": "Summarize, simplify, and quiz selected text with Pocket Mentor+, your AI-powered study and writing assistant.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Pocket Mentor+"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/logo.png",
        "assets/paper-light.png",
        "assets/paper-dark.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
